generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  firstName String?
  lastName  String?
  isActive  Boolean  @default(true)
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

enum Role {
  USER
  ADMIN
  SUPER_ADMIN
}

model Entity {
  id          Int      @id @default(autoincrement())
  description String
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("entities")
}

model Article {
  id                  Int      @id @default(autoincrement())
  codigoAsy           String
  description         String
  listprice           Float?   @default(0)
  revendedorsPrice    Float?   @default(0)
  codigoProvider      String?
  descriptionProvider String?
  isActive            Boolean  @default(true)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@map("articles")
}


enum EnumDocumentStatus {
  inCreation
  completed
  cancelled
}

model Document {
  documentId            Int                 @id @default(autoincrement())
  personName            String
  personId              Int
  personDocumentType    String
  personDocumentNumber  String
  documentDescription   String
  documentCreationDate  DateTime            @default(now())
  documentStatus        EnumDocumentStatus  @default(inCreation)
  creationUserId        Int

  items                 DocumentItem[]

  @@map("documents")
}

model DocumentItem {
  documentId      Int
  itemId          Int
  itemDescription String
  details         DocumentItemDetail[]

  document        Document @relation(fields: [documentId], references: [documentId], onDelete: Cascade)

  @@id([documentId, itemId])
  @@map("document_items")
}

model DocumentItemDetail {
  documentId        Int
  itemId            Int
  detailId          Int
  detailDescription String

  item              DocumentItem @relation(fields: [documentId, itemId], references: [documentId, itemId], onDelete: Cascade)

  @@id([documentId, itemId, detailId])
  @@map("document_item_details")
}

model Invoice {
  invoiceId            Int                 @id @default(autoincrement())
  personName           String
  personId             Int
  personDocumentType   String
  personDocumentNumber String
  invoiceDescription   String
  invoiceCreationDate  DateTime            @default(now())
  invoiceSentDate      DateTime
  creationUserId       Int
  invoiceTotalPrice    Float               @default(0)
  isActive             Boolean             @default(true)
  createdAt            DateTime            @default(now())
  updatedAt            DateTime            @updatedAt

  items                InvoiceItem[]

  @@map("invoices")
}

model InvoiceItem {
  invoiceId        Int
  itemId           Int
  itemDescription  String
  itemQuantity     Float               @default(0)
  itemTotalPrice   Float               @default(0)
  details          InvoiceItemDetail[]

  invoice          Invoice @relation(fields: [invoiceId], references: [invoiceId], onDelete: Cascade)

  @@id([invoiceId, itemId])
  @@map("invoice_items")
}

model InvoiceItemDetail {
  invoiceId          Int
  itemId             Int
  detailId           Int
  detailCode         String?
  detailDescription  String
  detailQuantity     Float               @default(0)
  detailUnitPrice    Float               @default(0)
  detailTotalPrice   Float               @default(0)

  item               InvoiceItem @relation(fields: [invoiceId, itemId], references: [invoiceId, itemId], onDelete: Cascade)

  @@id([invoiceId, itemId, detailId])
  @@map("invoice_item_details")
}

enum EnumQuoteStates {
  quoteInMaking
  quoteSent
  quoteApproved
  quoteRejected
  quoteCancelled
}

model Quote {
  quoteId            Int                 @id @default(autoincrement())
  customerId         Int
  quoteDescription   String
  quoteCreationDate  DateTime            @default(now())
  quoteStateId       EnumQuoteStates     @default(quoteInMaking)
  quoteTotalPrice    Float               @default(0)
  isActive           Boolean             @default(true)
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt

  items              QuoteItem[]

  @@map("quotes")
}

model QuoteItem {
  quoteId          Int
  itemId           Int
  itemQuantity     Float               @default(0)
  itemDescription  String
  itemUnitPrice    Float               @default(0)
  itemTotalPrice   Float               @default(0)

  quote            Quote @relation(fields: [quoteId], references: [quoteId], onDelete: Cascade)
  articles         QuoteItemArticle[]

  @@id([quoteId, itemId])
  @@map("quote_items")
}

model QuoteItemArticle {
  quoteId                  Int
  itemId                   Int
  itemArticleId            Int
  itemArticleQuantity      Float               @default(0)
  itemArticleAssembly      String
  itemArticleDescription   String
  itemArticleUnitPrice     Float               @default(0)
  itemArticleTotalPrice    Float               @default(0)

  item                     QuoteItem @relation(fields: [quoteId, itemId], references: [quoteId, itemId], onDelete: Cascade)

  @@id([quoteId, itemId, itemArticleId])
  @@map("quote_item_articles")
}

model Client {
  id              Int      @id @default(autoincrement())
  documentType    String
  documentNumber  String   @unique
  name            String
  email           String?
  phone           String?
  address         String?
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("clients")
}

model Customer {
  id              Int      @id @default(autoincrement())
  nombre          String?
  apellido        String?
  razonSocial     String?
  documento       String?
  tipoDocumento   String?
  telefono        String?
  email           String?
  direccion       String?
  ciudad          String?
  provincia       String?
  codigoPostal    String?
  activo          Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("customers")
}
